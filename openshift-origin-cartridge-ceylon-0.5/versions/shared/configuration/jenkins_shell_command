alias rsync="rsync --delete-after -az -e '$GIT_SSH'"

# Sync libs - Faster builds
#TODO rm rsync UPSTREAM_SSH:~/php/phplib/ ~/php/phplib/
rsync UPSTREAM_SSH:~/app-root/data/ceylon/repo/ ~/app-root/data/ceylon/repo/

# Build/update libs and run user pre_build and build
gear build

# Run tests here

# Deploy new build

# Stop app
$GIT_SSH UPSTREAM_SSH 'gear stop'

# Push content back to application
#TODO rm rsync ~/php/phplib/ UPSTREAM_SSH:~/php/phplib/
#TODO rm rsync ~/$WORKSPACE/ UPSTREAM_SSH:~/app-root/repo/
rsync ~/app-root/data/ceylon/repo/ UPSTREAM_SSH:~/app-root/data/ceylon/repo/

# Configure / start app
$GIT_SSH UPSTREAM_SSH 'gear cideploy'

# Configure / start app
jenkins_start_app UPSTREAM_SSH
